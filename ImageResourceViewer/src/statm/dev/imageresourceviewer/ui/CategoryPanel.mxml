<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 xmlns:ui="statm.dev.imageresourceviewer.ui.*"
		 width.normal="130"
		 width.expanded="80%"
		 height="100%">

	<fx:Script>
		<![CDATA[
			private var buttons : Array = [btnHero, btnWeapon, btnMount, btnNPC, btnMob, btnPet, btnFX];

			private function btn_clickHandler(event : MouseEvent) : void
			{
				trace(event.currentTarget);
			}
			
		]]>
	</fx:Script>

	<s:states>
		<s:State name="normal"/>
		<s:State name="expanded"/>
	</s:states>

	<s:VGroup bottom="0"
			  top="0"
			  left="0"
			  width="130"
			  paddingRight="5"
			  paddingLeft="5"
			  gap="6">
		<ui:CategoryButton id="btnHero"
						   click="btn_clickHandler(event)"/>
		<ui:CategoryButton id="btnWeapon"
						   click="btn_clickHandler(event)"/>
		<ui:CategoryButton id="btnMount"
						   click="btn_clickHandler(event)"/>
		<ui:CategoryButton id="btnNPC"
						   click="btn_clickHandler(event)"
						   currentState="collapseNormal"/>
		<ui:CategoryButton id="btnMob"
						   click="btn_clickHandler(event)"
						   currentState="collapseNormal"/>
		<ui:CategoryButton id="btnPet"
						   click="btn_clickHandler(event)"
						   currentState="collapseNormal"/>
		<ui:CategoryButton id="btnFX"
						   click="btn_clickHandler(event)"
						   currentState="collapseNormal"/>
	</s:VGroup>
</s:Group>
