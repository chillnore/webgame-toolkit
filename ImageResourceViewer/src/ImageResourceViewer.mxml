<?xml version="1.0" encoding="utf-8"?>
<s:WindowedApplication xmlns:fx="http://ns.adobe.com/mxml/2009"
					   xmlns:s="library://ns.adobe.com/flex/spark"
					   xmlns:mx="library://ns.adobe.com/flex/mx"
					   xmlns:imageplayer="statm.dev.libs.imageplayer.*"
					   showStatusBar="false"
					   title="测试"
					   width="1200"
					   height="720"
					   frameRate="15"
					   displayStateChange="displayStateChangeHandler(event)"
					   creationComplete="init()">

	<fx:Style source="styles/styles.css"/>

	<fx:Script>
		<![CDATA[
			import statm.dev.libs.imageplayer.loader.ImageBatch;

			private function init() : void
			{
				//nativeWindow.maximize();
			}

			protected function displayStateChangeHandler(event : NativeWindowDisplayStateEvent) : void
			{
				this.invalidateSkinState();
			}

			override protected function getCurrentSkinState() : String
			{
				if (nativeWindow.displayState == NativeWindowDisplayState.MAXIMIZED)
				{
					return "maximized";
				}
				return super.getCurrentSkinState();
			}
		]]>
	</fx:Script>
	<s:VGroup bottom="0"
			  top="0"
			  right="0"
			  gap="2"
			  paddingTop="5"
			  paddingRight="5"
			  paddingLeft="5"
			  paddingBottom="5"
			  width="130"
			  verticalAlign="middle">
		<imageplayer:ImagePlayer width="100%"
								 height="100%"/>
		<imageplayer:ImagePlayer width="100%"
								 height="100%"/>
		<imageplayer:ImagePlayer width="100%"
								 height="100%"/>
		<imageplayer:ImagePlayer width="100%"
								 height="100%"/>
		<imageplayer:ImagePlayer width="100%"
								 height="100%"/>
	</s:VGroup>
</s:WindowedApplication>
